@page
@model Feedback_Application.Pages.FeedbackPages.StartModel
@{
    ViewData["Title"] = "Selection Page";
}
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Selection Side</title>
    <link rel="stylesheet" href="~/css/Start.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body>
    <div class="container-Start">
        <a href="Ergebnisse" class="card results">
            <div class="icon">📊</div>
            Ergebnisse ansehen
        </a>
        <a href="#" class="card feedback" data-bs-toggle="modal" data-bs-target="#feedbackModal">
            <div class="icon">📝</div>
            Feedbackbogen erstellen
        </a>
    </div>

    <!-- Modal -->
    <div class="modal fade" id="feedbackModal" tabindex="-1" aria-labelledby="feedbackModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="feedbackModalLabel">Feedbackbogen erstellen</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form id="feedbackForm">
                        <div class="mb-3">
                            <label for="Name" class="form-label">Klassenname</label>
                            <input type="text" class="form-control" id="Name" name="Name" required>
                        </div>
                        <div class="mb-3">
                            <label for="Jahrgangsstufe" class="form-label">Jahrgangsstufe</label>
                            <input type="number" class="form-control" id="Jahrgangsstufe" name="Jahrgangsstufe" required>
                        </div>
                        <div class="mb-3">
                            <label for="Schuljahr" class="form-label">Schuljahr</label>
                            <input type="text" class="form-control" id="Schuljahr" name="Schuljahr" required>
                        </div>
                        <div class="mb-3">
                            <label for="Abteilung" class="form-label">Abteilung</label>
                            <input type="text" class="form-control" id="Abteilung" name="Abteilung" required>
                        </div>
                        <div class="mb-3">
                            <label for="Fach" class="form-label">Fach</label>
                            <input type="text" class="form-control" id="Fach" name="Fach" required>
                        </div>
                        <button type="submit" class="btn btn-primary">Speichern</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
