@page
@model Feedback_Application.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Login";
}

<h2>@ViewData["Title"]</h2>

@if (Model.ErrorMessage != null)
{
    <div class="alert alert-danger">
        @Model.ErrorMessage
    </div>
}

<form method="post">
    <div class="form-group">
        <label for="Username">Benutzername</label>
        <input type="text" id="Username" name="Input.Username" class="form-control" required />
    </div>
    <div class="form-group">
        <label for="Password">Passwort</label>
        <input type="password" id="Password" name="Input.Password" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-primary">Anmelden</button>
</form>