<!-- Modal für HINZUFÜGEN -->
<div class="modal fade" id="addEntityModal" tabindex="-1" aria-labelledby="addEntityModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addEntityModalLabel">Neuen Eintrag hinzufügen</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form method="post" asp-page-handler="AddEntity">
                    @Html.AntiForgeryToken()

                    <input type="hidden" name="EntityType" id="AddEntityType" />

                    <div class="mb-3">
                        <label for="AddEntityName" class="form-label">Name</label>
                        <input type="text" class="form-control" id="AddEntityName" name="EntityName" required />
                    </div>

                    <button type="submit" class="btn btn-primary">Hinzufügen</button>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Modal für BEARBEITEN -->
<div class="modal fade" id="editEntityModal" tabindex="-1" aria-labelledby="editEntityModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editEntityModalLabel">Eintrag bearbeiten</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form method="post" asp-page-handler="EditEntity">
                    @Html.AntiForgeryToken()

                    <input type="hidden" name="EntityId" id="EditEntityId" />
                    <input type="hidden" name="EntityType" id="EditEntityType" />

                    <div class="mb-3">
                        <label for="EditEntityName" class="form-label">Name</label>
                        <input type="text" class="form-control" id="EditEntityName" name="EntityName" required />
                    </div>

                    <button type="submit" class="btn btn-primary">Änderungen speichern</button>
                </form>
            </div>
        </div>
    </div>
</div>


